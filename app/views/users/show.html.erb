<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-lg-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-lg-8">
    <%= render 'follow_form' if signed_in? %>   
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <div class="microposts">
        <%= render @microposts %>
      </div>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>